<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <!--注册栏-->
        <TextView
            android:id="@+id/mShowHidden2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/layout"
            android:drawableRight="@mipmap/down_circle"
            android:gravity="center_vertical"
            android:text="注册"
            android:padding="10dp"
            android:textSize="20dp" />
        <!--要是不写这个LinearLayout布局，平移效果将会在父窗体进行-->
        <!--注册栏-->
        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mData2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color1"
        android:orientation="vertical">

            <Button
                android:id="@+id/zhuce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_circle_shape"
                android:text="注册"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit3_pass" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="用户名"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/edit3_username"
                app:layout_constraintEnd_toStartOf="@+id/edit3_username"
                app:layout_constraintTop_toTopOf="@+id/edit3_username" />

            <EditText
                android:id="@+id/edit3_username"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:layout_weight="2"
                android:background="@drawable/layout"
                android:ems="10"
                android:hint="请输入用户名"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.654"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="账号"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/edit3_name"
            app:layout_constraintEnd_toStartOf="@+id/edit3_name"
            app:layout_constraintTop_toTopOf="@+id/edit3_name" />

            <EditText
                android:id="@+id/edit3_name"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_weight="2"
                android:background="@drawable/layout"
                android:ems="10"
                android:hint="请输入账号"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.654"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit3_username" />

            <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="密码"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/edit3_pass"
            app:layout_constraintEnd_toStartOf="@+id/edit3_pass"
            app:layout_constraintTop_toTopOf="@+id/edit3_pass" />

            <EditText
                android:id="@+id/edit3_pass"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_weight="2"
                android:background="@drawable/layout"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit3_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
